@model CapaPresentacion.ServiceUsuarios.UsuarioBE

@{
    ViewBag.Title = "EDITAR USUARIO";
}

<h2>EDITAR </h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>USUARIO</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-group">
    @Html.Label("ID", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DisplayFor(model => model.Us_id, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Us_id, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        @Html.Label("NOMBRE", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Us_nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Us_nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group"> 
        @Html.Label("FECHA DE NACIMIENTO - yyyy/mm/dd", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Us_fech_nacimiento, new { htmlAttributes = new { @class = "form-control"  } })
            @Html.ValidationMessageFor(model => model.Us_fech_nacimiento, "", new { @class = "text-danger" })
        </div>
    </div>
     
    <div class="form-group">
        @Html.Label("SEXO", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Us_sexo, (IEnumerable
         <SelectListItem>)ViewData["sexoList"], "--Select SEXO--", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Us_sexo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
